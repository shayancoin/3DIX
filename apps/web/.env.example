# Next.js Web App Environment Configuration Template
# Copy this file to .env.local for local development
# For production, set these variables in your deployment platform (Vercel, etc.)

# Database Configuration
# For local development with Docker: postgres://postgres:postgres@localhost:54322/postgres
# For production: Use your production Postgres database URL
POSTGRES_URL=postgres://postgres:postgres@localhost:54322/postgres

# Stripe Configuration
# Get your Stripe Secret Key from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret
# Run `stripe listen --print-secret` to get the webhook secret for local development
# For production, use the webhook secret from your Stripe Dashboard
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Base URL
# For local development
BASE_URL=http://localhost:3000
# For production, use your production domain
# BASE_URL=https://yourdomain.com

# Backend API URL
# For local development, the FastAPI backend runs on port 8000
NEXT_PUBLIC_API_URL=http://localhost:8000
# For production, use your production API URL
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# Note: NEXT_PUBLIC_ prefix is required for client-side access

# Authentication Secret
# Generate a random secret: openssl rand -base64 32
# Or use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
AUTH_SECRET=your_auth_secret_here
